generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id             Int      @id @default(autoincrement())
  nome           String   @db.VarChar(50)
  cpf            String   @unique @db.VarChar(11)
  telefone       String   @db.VarChar(15)
  email          String   @unique(map: "cliente_email_key") @db.VarChar(50)
  nascimento     DateTime   
  password       String   @db.VarChar(100)
  PedidoIngresso Pedido[]
}

model Funcionario {
  id         Int      @id @default(autoincrement())
  nome       String   @db.VarChar(50)
  cpf        String   @unique(map: "funcionario_cpf_key") @db.VarChar(11)
  telefone   String   @db.VarChar(15)
  email      String   @unique @db.VarChar(50)
  nascimento DateTime
  password   String   @db.VarChar(100)
  is_admin   Boolean  @default(true)
}

model Ingresso {
  id                  Int      @id @default(autoincrement())
  ingresso_disponivel String
  data_disponivel      DateTime 
  preco               Decimal
  PedidoIngresso      Pedido[]
}

model Pedido {
  id            Int       @id @default(autoincrement())
  data          DateTime  
  valorPago     String
  ingressoUsado String
  ingressoTipo  String
  cliente       Cliente   @relation(fields: [clienteId], references: [id])
  clienteId     Int
  Ingresso      Ingresso @relation(fields: [ingressoId], references: [id])
  ingressoId    Int
}
