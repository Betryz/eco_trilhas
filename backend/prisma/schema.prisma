generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Cliente {
  id             Int              @id @default(autoincrement())
  nome           String
  cpf            String           @unique(map: "cliente_cpf_key")
  telefone       String
  email          String           @unique(map: "cliente_email_key")
  nascimento     DateTime
  password       String
  PedidoIngresso Pedido[]
}

model Funcionario {
  id         Int      @id @default(autoincrement())
  nome       String
  cpf        String   @unique(map: "funcionario_cpf_key")
  telefone   String
  email      String   @unique(map: "funcionario_email_key")
  nascimento DateTime
  password   String
  is_admin   Boolean  @default(false)
}

model Ingresso {
  id                  Int              @id @default(autoincrement())
  ingresso_disponivel String
  data                DateTime         @default(now())
  preco               Decimal
  PedidoIngresso      Pedido[]
}

model Pedido {
  id            Int      @id @default(autoincrement())
  data          DateTime @default(now())
  valorPago     Decimal
  ingressoUsado BigInt
  ingressoTipo  String
  ingresso      Ingresso @relation(fields: [ingressoId], references: [id])
  ingressoId    Int
  cliente       Cliente  @relation(fields: [clienteId], references: [id])
  clienteId     Int
}
